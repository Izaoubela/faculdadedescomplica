Algoritmo "ProdecimentoMostreNaTela"

Procedimento mostreNaTela (frase:caracter)

var

inicio
      ESCREVA(frase)
fimprocedimento

var

inicio
      escreval ("Mensagem do Procedimento:")
      mostreNaTela("Meu primeiro procedimento com parâmetro")

fimalgoritmo

--------

Algoritmo "ProdecimentoExemploParametro"

Procedimento soma (x,y:inteiro)

var
   aux: inteiro

inicio
      aux <- x + y
      res <- aux
fimprocedimento

var
res, m, n: inteiro

inicio
      n <- 4
      m <- -9
      soma(n,m)
      Escreva(res)
fimalgoritmo

------

Algoritmo "ExercicioProdecimentoComParametro"

Procedimento mostreOProduto (x,y:real)

var
   aux: real

inicio
      aux <- x * y
      Escreval(aux)
      
fimprocedimento

var
m, n: real

inicio
      m <- 1.5
      n <- 3
      mostreOProduto(m,n)

fimalgoritmo

-----------

Algoritmo "ExercicioProdecimentoComParametro"

Procedimento mostreOProduto (x,y:real)

var
   aux: real

inicio
      aux <- x * y
      Escreval("O produto dos números é: ", aux)
      
fimprocedimento

var
m, n: real

inicio
      ESCREVA("Digite um número:")
      LEIA (m)
      ESCREVA("Digite um número:")
      LEIA (n)
      mostreOProduto(m,n)

fimalgoritmo


